<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizzApp.Login">
    
    <ContentPage.Content>
        <Grid>
            <Image Source="wallpaper.jpg" Aspect="AspectFill"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Source="gigaChad.png" WidthRequest="100" HeightRequest="100" Margin="0,50,0,30"/>

                <StackLayout Grid.Row="1" Padding="30,20">
                    <Entry x:Name="usuario" Placeholder="Usuario" PlaceholderColor="White" TextColor="White"/>
                    <Button Clicked="Button_Clicked" Text="Iniciar Quizzzzzz" BackgroundColor="White" CornerRadius="20" TextColor="#1A1D26"/>
                </StackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>
    
</ContentPage>